<form>
<div class="alignElements">
    <label class="searchComponentLabel">Product: </label>
    <input name="product" class="form-input searchInput" value="@ViewBag.product"/>
    <label class="searchComponentLabel">Store: </label>
    <select name="storeId" class="form-input searchSelector">
        <option value="@null">Select store</option>
        @foreach (Store store in ViewBag?.Stores)
        { 
            if(store.Id == ViewBag?.storeId)
            {
                <option value="@store.Id" selected>@store.Name</option>
            }
            else
            {
                <option value="@store.Id">@store.Name</option>
            }
        }
    </select>
    <label class="searchComponentLabel">Price: </label>
    <input name="price" class="form-input priceInput" value="@ViewBag.price" type="number" />
    <div class="searchButtons">
        <button class="btn btn-success searchButton">Search</button>
        <a href="~/product/index" class="btn btn-secondary text-white text-decoration-none clearFiltersLabel">Clear all</a>
    </div>
</div>
</form>