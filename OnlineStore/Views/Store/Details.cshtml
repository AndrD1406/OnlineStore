@model StoreDetailsViewModel

@{
    ViewBag.Title = "Store Details";
}

<div class="container mt-4">
    <h1 class="mb-4">@Model.Store.Name
        <!-- Додати новий продукт: тільки для адміністраторів -->
        @if (User.IsInRole("Admin"))
        {
            <button type="button" class="btn btn-primary mb-1" onclick="location.href='@Url.Action("CreateProduct", "Store", new { storeId = Model.Store.Id })'">Add Product</button>
        }
    </h1>

   

    <!-- Форма фільтрації товарів -->
    <form asp-action="Details" method="get" class="row g-2 mb-4">
        <input type="hidden" name="storeId" value="@ViewBag.storeId" />
        <div class="col-md-5">
            <input type="text" name="product" value="@Model.ProductFilter" class="form-control" placeholder="Search product..." />
        </div>
        <div class="col-md-3">
            <input type="number" step="0.01" name="price" value="@Model.PriceFilter" class="form-control" placeholder="Max price" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <!-- Сітка карточок товарів -->
    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- Назва товару -->
                            <h5 class="card-title">@product.Name</h5>

                            <!-- Опис товару -->
                            <p class="card-text flex-grow-1">@product.Description</p>

                            <!-- Ціна та кількість -->
                            <div class="mb-2">
                                <strong>Price:</strong> @product.Price.ToString("C")<br />
                                <strong>Quantity:</strong> @product.Quantity
                            </div>

                            <!-- Дії: перегляд, додати в корзину, видалити -->
                            <div class="d-flex flex-column align-items-start gap-2">
                                <a asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@product.Id"
                                   class="link-primary text-decoration-none">
                                    Details
                                </a>

                                <div>
                                    <button type="button" class="btn btn-success me-2" onclick="addToCart('@product.Id')">
                                        Add to Cart
                                    </button>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <button type="button" class="btn btn-danger" onclick="if(confirm('Are you sure you want to delete this product?')) { window.location.href='@Url.Action("DeleteProduct", "Store", new { storeId = ViewBag.storeId, productId = product.Id })'; }">
                                            Delete
                                        </button>
                                    }

                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">No products found.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // AJAX: додавання товару в корзину
        function addToCart(productId) {
            fetch(`/Cart/AddToCart?productId=${productId}`, { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        alert('Product added to cart');
                    } else {
                        alert('Error adding product to cart');
                    }
                })
                .catch(() => alert('Network error'));
        }
    </script>
}
