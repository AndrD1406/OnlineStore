@model StoreDetailsViewModel

@{
    ViewData["Title"] = "Store Inventory - " + Model.Store.Name;
}

<h2>Store Inventory: @Model.Store.Name</h2>

@* <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Product", new { storeId = Model.Store.Id })'">Add Product</button> *@

<form method="get" class="mt-3">
    <input type="hidden" name="storeId" value="@Model.Store.Id" />
    <div class="searchRow">
            <input type="text" class="bigSearchInput form-input" name="product" value="@Model.ProductFilter" placeholder="Product name" />

            <input type="number" class="bigPriceInput form-input" name="price" value="@(Model.PriceFilter.HasValue ? Model.PriceFilter.ToString() : "")" placeholder="Price" />
        <div class="searchButtons">
            <button class="button button-blue-back searchButton">Search</button>
            <a href="~/product/index" class="link-hover clearFiltersLabel">Clear all</a>
        </div>
    </div>
</form>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                </tr>
        }
    </tbody>
</table>
