@model IEnumerable<OnlineStore.DataAccess.Models.Store>

@{
    ViewData["Title"] = "Stores";
}

<h2>Stores</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Stores</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
                <tr>
                    <td>@store.Name</td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Store", new { storeId = store.Id })'">Details</button>
                        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Edit", "Store", new { id = store.Id })'">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Store", new { id = store.Id })'">Delete</button>
                    </td>
                </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-primary mb-3" onclick="location.href='@Url.Action("Create", "Store")'">Create Store</button>
