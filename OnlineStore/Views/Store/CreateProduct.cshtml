@model OnlineStore.DataAccess.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <h2 class="mb-4">Create Product</h2>

    <form asp-action="CreateProduct" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="StoreId" value="@ViewBag.StoreId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" type="number" class="form-control" required min="0" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" required min="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Details", "Store", new { storeId = @ViewBag.StoreId })'">Cancel</button>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}