@model IEnumerable<OnlineStore.DataAccess.Models.Purchase>

<h2>Your Purchases</h2>

@if (!Model.Any())
{
    <p>You haven't made any purchases yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Total</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model)
            {
                <tr>
                    <td>@purchase.TotalAmount</td>
                    <td>@purchase.CreatedDate.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
